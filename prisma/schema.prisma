// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  LOAN_OFFICER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
}

enum LoanStatus {
  PROCESSING
  APPROVED
  REJECTED
  ACTIVE
  PAID
}

enum LoanType {
  PERSONAL
  AUTO
  BUSINESS
  MORTGAGE
}

model Loan {
  id                String     @id @default(cuid())
  amount            Float
  purpose           String
  repaymentDuration Int // in days
  status            LoanStatus @default(PROCESSING)
  loanType          LoanType
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  userId            String
  user              User       @relation(fields: [userId], references: [id])
}
